<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoliceStationMenuList.PoliceStationDetailActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >



        <LinearLayout
            android:id="@+id/policeStationdetailtoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            >

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/btnPoliceStationDetailBack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Police SubStation"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.AppBarLayout>


        </LinearLayout>






        <TextView
            android:id="@+id/txtDetailPoliceStationNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/policeStationdetailtoolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDetailsPoliceStation"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_below="@+id/txtDetailPoliceStationNameTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@color/safeplace_btnblue" />

        <TextView
            android:id="@+id/txtDetailPoliceStationCaptionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgDetailsPoliceStation"
            android:layout_alignLeft="@+id/imgDetailsPoliceStation"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_police"
            android:drawablePadding="10dp"
            android:text="Police Station Name"
            android:textColor="#171616"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetailPoliceStationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailPoliceStationCaptionName"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCaptionName"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDetailPoliceStationCaptionCommander"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailPoliceStationName"
            android:layout_alignLeft="@+id/txtDetailPoliceStationName"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_police"
            android:drawablePadding="10dp"
            android:text="Police Station Commander"
            android:textColor="#171616"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetailPoliceStationCommander"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailPoliceStationCaptionCommander"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCaptionCommander"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"

            android:textSize="20dp" />


        <TextView
            android:id="@+id/txtDetailPoliceStationCaptionLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailPoliceStationCommander"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCommander"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="10dp"
            android:text="Location"
            android:textColor="#171616"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetailPoliceStationLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailPoliceStationCaptionLocation"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCaptionLocation"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"

            android:textSize="20dp" />


        <TextView
            android:id="@+id/txtDetailPoliceStationCaptionSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailPoliceStationLocation"
            android:layout_alignLeft="@+id/txtDetailPoliceStationLocation"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="10dp"
            android:textColor="#171616"
            android:text="Schedule"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetailPoliceStationSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailPoliceStationCaptionSchedule"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCaptionSchedule"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"

            android:textSize="20dp" />


        <TextView
            android:id="@+id/txtDetailPoliceStationCaptionWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailPoliceStationSchedule"
            android:layout_alignLeft="@+id/txtDetailPoliceStationSchedule"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:textColor="#171616"
            android:text="Contact Details"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtDetailPoliceStationWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailPoliceStationCaptionWebsite"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCaptionWebsite"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"

            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/txtDetailPoliceStationWebsite"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCaptionWebsite"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtStatisticalReportYearLayout"
            >

            <TextView
                android:id="@+id/txtStatisticalReportYearTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Most Common Crimes for "
                android:textColor="#171616"
                android:textStyle="bold"
            />

            <TextView
                android:id="@+id/txtStatisticalReportCurrentYearTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textColor="#171616"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtStatisticalReportYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtStatisticalReportYearLayout"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCaptionWebsite"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/safeplace_darkfont"

            android:textSize="20dp" />


        <TextView
            android:id="@+id/txtStatisticalReportMonthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtStatisticalReportYear"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCaptionWebsite"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="The Most Common Crimes for this month"
            android:textStyle="bold"
            android:textColor="#171616"

            />

        <TextView
            android:id="@+id/txtStatisticalReportMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtStatisticalReportMonthTitle"
            android:layout_alignLeft="@+id/txtDetailPoliceStationCaptionWebsite"
            android:layout_marginTop="5dp"
            android:textColor="@color/safeplace_darkfont"

            android:layout_marginBottom="10dp"
            android:textSize="20dp" />


    </RelativeLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/safeplace_bgcolor"
    tools:context=".Verification.UpdateInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">


        <LinearLayout
            android:id="@+id/TaskbarUpdateInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/btnAccountBack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Account Information"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.AppBarLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/UpdateTitleInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TaskbarUpdateInfo"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Please Update Your Information if necessary before submitting it for verification."
            android:textColor="@color/safeplace_darkfont"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/UpdateFNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UpdateTitleInfo"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="First Name"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="15sp"

            />

        <EditText
            android:id="@+id/txtUpdateFName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UpdateFNameTitle"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/safeplace_textHint"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UpdateMNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUpdateFName"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="Middle Name"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="15sp"

            />

        <EditText
            android:id="@+id/txtUpdateMName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UpdateMNameTitle"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/safeplace_textHint"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="20sp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/UpdateLNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUpdateMName"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="Last Name"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="15sp"

            />

        <EditText
            android:id="@+id/txtUpdateLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UpdateLNameTitle"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/safeplace_textHint"
            android:textSize="20sp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/UpdateGenderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUpdateLName"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="Gender"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="15sp"

            />


        <EditText
            android:id="@+id/txtUpdateGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UpdateGenderTitle"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/safeplace_textHint"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/UpdateBirthdateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUpdateGender"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="Birthdate"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="15sp"

            />

        <EditText
            android:id="@+id/txtUpdateBirthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UpdateBirthdateTitle"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/safeplace_textHint"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/UpdateAddressTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUpdateBirthdate"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="Address"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="15sp"

            />

        <EditText
            android:id="@+id/txtUpdateAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UpdateAddressTitle"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/safeplace_textHint"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/UpdateContactTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUpdateAddress"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="Contact"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="15sp"

            />

        <EditText
            android:id="@+id/txtUpdateContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UpdateContactTitle"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/safeplace_textHint"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnInfoSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUpdateContact"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_round"
            android:text="SUBMIT"
            app:backgroundTint="@color/colorAccent" />


    </RelativeLayout>


</ScrollView>
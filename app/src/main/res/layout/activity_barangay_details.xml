<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarangaysMenuList.BarangayDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/barangayActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/btnBarangayDetailsBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="BARANGAY"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>


        <TextView
            android:id="@+id/txtDetailBarangayNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/barangayActionBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDetailsBarangay"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_below="@+id/txtDetailBarangayNameTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="#FDD835" />


        <TextView
            android:id="@+id/txtDetailBarangayCaptionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgDetailsBarangay"
            android:layout_alignLeft="@+id/imgDetailsBarangay"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_barangay"
            android:drawablePadding="10dp"
            android:text="Barangay Name"
            android:textColor="#171616"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetailBarangayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailBarangayCaptionName"
            android:layout_alignLeft="@+id/txtDetailBarangayCaptionName"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDetailCaptionBarangayCaptain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailBarangayName"
            android:layout_alignLeft="@+id/txtDetailBarangayName"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_director"
            android:drawablePadding="10dp"
            android:text="Barangay Captain"
            android:textColor="#171616"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetailBarangayCaptain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailCaptionBarangayCaptain"
            android:layout_alignLeft="@+id/txtDetailCaptionBarangayCaptain"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDetailBarangayCaptionLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailBarangayCaptain"
            android:layout_alignLeft="@+id/txtDetailBarangayCaptain"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="10dp"
            android:text="Location"
            android:textColor="#171616"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetailBarangayLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailBarangayCaptionLocation"
            android:layout_alignLeft="@+id/txtDetailBarangayCaptionLocation"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDetailBarangayCaptionSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailBarangayLocation"
            android:layout_alignLeft="@+id/txtDetailBarangayLocation"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="10dp"
            android:text="Barangay Working Hours"
            android:textColor="#171616"

            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtDetailBarangaySchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailBarangayCaptionSchedule"
            android:layout_alignLeft="@+id/txtDetailBarangayCaptionSchedule"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDetailBarangayCaptionContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailBarangaySchedule"
            android:layout_alignLeft="@+id/txtDetailBarangaySchedule"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:text="Contact Details"
            android:textColor="#171616"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetailBarangayContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDetailBarangayCaptionContact"
            android:layout_alignLeft="@+id/txtDetailBarangayCaptionContact"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TEST"
            android:textColor="@color/safeplace_darkfont"

            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/txtDetailBarangayContact"
            android:layout_alignLeft="@+id/txtDetailBarangayContact"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtBrgyStatisticalReportYearLayout"
            >

            <TextView
                android:id="@+id/txtBrgyStatisticalReportYearTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Most Common Crimes for "
                android:textColor="#171616"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtBrgyStatisticalReportCurrentYearTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textColor="#171616"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtBrgyStatisticalReportYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBrgyStatisticalReportYearLayout"
            android:layout_alignLeft="@+id/txtDetailBarangayContact"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/safeplace_darkfont"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/txtBrgyStatisticalReportMonthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBrgyStatisticalReportYear"
            android:layout_alignLeft="@+id/txtDetailBarangayContact"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="The Most Common Crimes For This Month"
            android:textStyle="bold"
            android:textColor="#171616"

            />

        <TextView
            android:id="@+id/txtStatisticalReportMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBrgyStatisticalReportMonthTitle"
            android:layout_alignLeft="@+id/txtDetailBarangayContact"
            android:layout_marginTop="5dp"
            android:textColor="@color/safeplace_darkfont"
            android:layout_marginBottom="10dp"
            android:textSize="20dp" />



    </RelativeLayout>

</ScrollView>
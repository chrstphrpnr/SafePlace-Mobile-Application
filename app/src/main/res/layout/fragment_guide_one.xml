<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/safeplace_bgcolor"
    tools:context=".Verification.GuideOneFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/taskbarfragone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/btnGuidOneBack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="VERIFICATION"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.AppBarLayout>


        </LinearLayout>

        <!--        <TextView-->
        <!--            android:id="@+id/AboutVerificationTitle"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/taskbarfragone"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:layout_marginTop="@dimen/_20sdp"-->
        <!--            android:fontFamily="@font/opensans"-->
        <!--            android:gravity="center"-->
        <!--            android:text="ABOUT VERIFICATION"-->
        <!--            android:textColor="@color/safeplace_darkfont"-->
        <!--            android:textSize="@dimen/_20sdp"-->

        <!--            android:textStyle="bold" />-->


        <ImageView
            android:id="@+id/AboutVerificationImage1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:layout_below="@+id/taskbarfragone"
            android:src="@drawable/verification1" />

        <TextView
            android:id="@+id/AboutVerificationDescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AboutVerificationImage1"
            android:layout_centerInParent="true"
            android:fontFamily="@font/opensans"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_28sdp"
            android:text="By knowing the identity behind each SafePlace App user, we are able to create a secure community for everyone. The personal data collection and verification processes required for the SafePlace App are also known as the user identification process."
            android:textColor="@color/safeplace_darkfont"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/AboutVerificationImage2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_180sdp"
            android:layout_below="@+id/AboutVerificationDescription1"
            android:src="@drawable/verification2" />

        <TextView
            android:id="@+id/AboutVerificationDescription2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AboutVerificationImage2"
            android:layout_centerInParent="true"
            android:fontFamily="@font/opensans"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_28sdp"
            android:text="We take your safety seriously. If you submit fake information, you may be blacklisted."
            android:textColor="@color/safeplace_darkfont"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnContinueGuideOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AboutVerificationDescription2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:backgroundTint="@color/safeplace_btnblue"
            android:text="CONTINUE" />


    </RelativeLayout>


</ScrollView>